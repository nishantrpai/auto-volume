{
  "manifest_version": 3,
  "name": "xlinks",
  "version": "0.1.1",
  "description": "Replaces spaced links on X (Twitter) with actual clickable links",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "xlinks"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}